generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Student {
  id             Int            @id @default(autoincrement())
  student_number Int            @unique
  first_name     String?
  last_name      String?
  mid_name       String?
  suffix         String?
  course         String?
  major          String?
  nickname       String?
  school_email   String         @unique
  personal_email String
  thesis_title   String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  StudentAuth    StudentAuth?
  studentDetail  StudentDetail?
}

model StudentDetail {
  id           Int      @id @unique
  birth_date   DateTime
  province     String?
  city         String?
  barangay     String?
  mothers_name String?
  fathers_name String?
  contact_num  Int?
  student      Student  @relation(fields: [id], references: [id])
}

model StudentAuth {
  id              Int       @id @unique
  is_verified     Boolean   @default(false)
  hashed_password String?
  last_login      DateTime?
  student         Student   @relation(fields: [id], references: [id])
}
