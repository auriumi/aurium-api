generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Student {
  id              Int            @id @default(autoincrement())
  first_name      String
  last_name       String
  mid_name        String?
  personal_email  String
  birth_date      DateTime
  course          String?
  createdAt       DateTime       @default(now())
  major           String?
  nickname        String?
  school_email    String         @unique
  suffix          String?
  thesis_title    String?
  updatedAt       DateTime       @updatedAt
  StudentAuth     StudentAuth?
}

model StudentAuth {
  id              Int         @id @unique
  student_number  Int         @unique
  is_verified     Boolean     @default(false)
  hashed_password String?
  last_login      DateTime?
  student         Student     @relation(fields: [id], references: [id])
}
